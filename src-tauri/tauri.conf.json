{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "soundcloud-sync",
  "version": "0.1.0",
  "identifier": "ch.hortiprod.lucnelmr",
  "build": {
    "frontendDist": "../dist/soundcloud-sync/browser",
    "devUrl": "http://localhost:4200",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "soundcloud-sync",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["soundcloud-sync"]
      }
    }
  }
}
